<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Blog-ed</div>
    <div class="ui top attached segment">
       <div class="ui divided items">
           <% blogs.forEach(function(blog){ %>
           <div class="item">
              <div>
                  <img class="indeximg" src="<%= blog.image %>" alt="<%= blog.title %>"> 
              </div>
              <div class="content">
                  <a href="/blogs/<%=blog._id%>" class="header"><%= blog.title %></a>
                  <div class="meta">
                      <span><%= blog.created.toDateString() %></span>
                  </div>
                  <div class="description">
                      <p><%- blog.body.substring(0,100) %>.....</p>
                  </div>
                  <div class="extra">
                      <a href="/blogs/<%=blog._id%>" class="ui green basic button">
                          Read More
                          <i class="right small info icon"></i>
                      </a>
                  </div>
              </div>
            </div>
           <% }); %>
       </div>
        
    </div>
</div>


<% include ./partials/footer %>