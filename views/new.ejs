<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="post">
       <div class="ui field">
           <label>Title</label>
           <input type="text" name="blog[title]" placeholder="Title of Blog">
       </div>
        <div class="ui field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="ui field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="Blog Content hoes here"></textarea>
        </div>       
        <input type="submit" class="ui orange basic button">
        <a href="/blogs" class="ui black basic button" id="gobacknew">Go Back</a>
    </form>
    
</div>

